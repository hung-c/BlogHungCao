<!DOCTYPE html>
<html lang="en">
  <head>
    <title></title>
    <%- include('layout/head') %>
    
    
  </head>
  <body>
    
    <!--Navbar-->
    <%- include('layout/nav') %>

    <!--Add New Post button-->
    <div class="row">
      <div class="col-md-12">
        <a href="/admin/post/new" class="btn btn-success padding-2" padding:12px >Add New Post</a>
      </div>
    </div>

    <!--Table Posts-->
    <div class="panel panel-default">
        <div class="panel-heading">
          Posts
        </div>
        <!---->
        <div class="panel-body">
            <div class="table-respinsive">
              <table class="table table-striped table-bordered table-hover">
                <thead>
                  <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Content</th>
                    <th>Author</th>
                    <th>Create Time</th>
                    <th>Update Time</th>
                    <th>Action</th>                 
                  </tr>
                </thead>
                <tbody>
                  <% if(data && data.posts) {%> 
                      <% for(var i =0; i < data.posts.length; i++) {%>
                        <tr>
                          <td> <%= data.posts[i].id%></td>     
                          <td> <%= data.posts[i].title%></td>   
                          <td> <%= data.posts[i].content%></td>   
                          <td> <%= data.posts[i].author%></td>   
                          <td> <%= data.posts[i].created_at%></td>   
                          <td> <%= data.posts[i].updated_at%></td>   
                          <td> 
                              <a href="/admin/post/edit/<%=data.posts[i].id%>" class="btn btn-primary">Edit</a>
                              <a href="" class="btn btn-danger">Delete</a>
                          </td>             
                        </tr>
                      <% } %>                   
                  <% } %>
                </tbody>
              </table>
            </div>
        </div>
    </div>
  </body>
</html>